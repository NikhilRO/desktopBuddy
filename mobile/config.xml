<?xml version='1.0' encoding='utf-8'?>
<widget id="com.magnetic.mouse" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Magnetic Mouse</name>
    <description>
      Android app built with Cordova to remotely control desktop input using voice commands and the built-in magnetometer.
    </description>
    <author email="dev@cordova.apache.org" href="http://devpost.com/software/magnetic-mouse">
        Edwin Zhang, Dmytro Shynkevych, Nikhil Gupta, Callum Moseley
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-magnetometer" spec="^1.0.0" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
    <plugin name="cz.blocshop.socketsforcordova" spec="^1.1.0" />
    <engine name="android" spec="^7.0.0" />
</widget>
